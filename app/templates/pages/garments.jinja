{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - All garments

{% endblock %}


{% block content %}

    <h1>garments...</h1>


    <article>

        <ul>
            {% for garment in garments %}

                <li>
                    <a href="/garment/{{ thing.id }}">
                        {{ garment.name }}
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


    <article>

        <h3>Add a New Garment...</h3>

        <form action="/add" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Name of new garment"
                required
            >

            <input
                type="number"
                name="price"
                min="0"
                placeholder="Price in dollars"
                required
            >

            <button>Add the Garment</button>

        </form>

    </article>

{% endblock %}

