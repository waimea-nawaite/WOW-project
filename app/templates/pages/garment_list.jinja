{#=====================================================
  Home page
  - Hero style greeting banner
  - List of garments passed in as 'garments' array
  - Form for adding a new garment
=====================================================#}

{% extends 'pages/base.jinja' %}

{% block title %}

    Garment List

{% endblock %}

{% block content %}

    <section id="garment_list">

        <h1>Garments...</h1>

            <ul>
                {% for garment in garments %}

                    <article>
                        {{ garment.name }} 
                        <p>Priority: {{ garment.priority }}</p>
                        <p>Date listed: {{ garment.date }}</p>
                        {% if garment.complete %}
                            <p>Complete: <a href="/incomplete/{{ garment.id }}">🗹</a></p>
                        {% else %} 
                            <p>Complete: <a href="/complete/{{ garment.id }}">☐</a></p>
                        {% endif %}       
                        <a href="/delete/{{ garment.id }}" onclick="return confirm('Really remove?');">Remove</a>
                    </article>

                {% else %}

                    <p>None!</p>

                {% endfor %}
            </ul>

    </section>

    <article>

        <h3>Add a New Garment...</h3>

        <form action="/add" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Name of new garment"
                required
            >

            <input
                type="number"
                name="priority"
                min="0"
                max="5"
                placeholder="Priority of new garment"
                required
            >

            <button>Add Garment</button>

        </form>

    </article>

{% endblock %}