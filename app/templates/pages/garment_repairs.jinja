{% extends 'pages/base.jinja' %}


{% block title %}

  Garment repairs

{% endblock %}

{% block content %}

  <h2>The list of garments with repairs</h2>

   <ul>
      {% for garment in garments %}

          <article>
              <a href="/garment_single/{{ garment.id }}">{{ garment.name }}</a>
             
              {{ garment.date }}
          </article>

      {% else %}

          <p>None!</p>

      {% endfor %}
    </ul>
  


{% endblock %}

